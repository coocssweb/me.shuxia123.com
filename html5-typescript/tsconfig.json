{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "removeComments": true,
        "moduleResolution": "Classic",
        "declaration": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "build",
        "config"
    ],
    "include": [
        "src"
    ],
    "paths":{
        "@layout": ["./src/layout/index.ts"],
        "@scss": ["./src/assets/scss"],
        "@utils": ["./src/utils"]
    }
}